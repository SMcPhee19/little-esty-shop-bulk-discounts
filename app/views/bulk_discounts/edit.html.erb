<h1>Edit: <%= "#{@bulk_discount.id}" %></h1>
<br>
<div id="discount-edit-form">
  <%= form_with url:"/merchants/#{@merchant.id}/bulk_discounts/#{@bulk_discount.id}/edit", method: :patch do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name, value: @bulk_discount.name %>

    <%= form.label :percent %>
    <%= form.number_field :percent, value: @bulk_discount.percent %>

    <%= form.label :quantity %>
    <%= form.number_field :quantity, value: @bulk_discount.quantity %>
    <%= form.submit %>
  <% end %>
</div>